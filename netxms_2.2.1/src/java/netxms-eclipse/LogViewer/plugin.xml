<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="%view.name.LogViewer"
            allowMultiple="true"
            class="org.netxms.ui.eclipse.logviewer.views.LogViewer"
            id="org.netxms.ui.eclipse.logviewer.view.log_viewer">
      </view>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
      <command
            name="%command.name.AuditLog"
            description="%command.description.AuditLog"
            categoryId="org.netxms.ui.eclipse.console.category.views"
            id="org.netxms.ui.eclipse.logviewer.commands.openAuditLog">
      </command>
      <command
            name="%command.name.EventLog"
            description="%command.description.EventLog"
            categoryId="org.netxms.ui.eclipse.console.category.views"
            id="org.netxms.ui.eclipse.logviewer.commands.openEventLog">
      </command>
      <command
            categoryId="org.netxms.ui.eclipse.console.category.views"
            description="%command.description.Syslog"
            id="org.netxms.ui.eclipse.logviewer.commands.openSyslog"
            name="%command.name.Syslog">
      </command>
      <command
            description="%command.description.LogFilter"
            id="org.netxms.ui.eclipse.logviewer.commands.show_filter"
            name="%command.name.LogFilter">
      </command>
      <command
            categoryId="org.netxms.ui.eclipse.console.category.views"
            description="%command.description.TrapLog"
            id="org.netxms.ui.eclipse.logviewer.commands.openSnmpTrapLog"
            name="%command.name.TrapLog">
      </command>
      <command
            description="%command.description.MoreData"
            id="org.netxms.ui.eclipse.logviewer.commands.get_more_data"
            name="%command.name.MoreData">
      </command>
      <command
            description="%command.description.Query"
            id="org.netxms.ui.eclipse.logviewer.commands.execute"
            name="%command.name.Query">
      </command>
      <command
            id="org.netxms.ui.eclipse.logviewer.commands.eventHistory"
            name="Event log">
      </command>
      <command
            id="org.netxms.ui.eclipse.logviewer.commands.objectSyslog"
            name="Syslog">
      </command>
      <command
            id="org.netxms.ui.eclipse.logviewer.commands.objectTrapLog"
            name="SNMP trap log">
      </command>
   </extension>
   
   <extension point = "org.eclipse.ui.actionSets">
	   <actionSet id="org.netxms.ui.eclipse.logviewer.action_set"
		   label="%actionSet.label.LogViewer"
		   visible="true">
     <action
           class="org.netxms.ui.eclipse.logviewer.actions.OpenSyslog"
           definitionId="org.netxms.ui.eclipse.logviewer.commands.openSyslog"
           icon="icons/syslog.png"
           id="org.netxms.ui.eclipse.logviewer.actions.openSyslog"
           label="%action.label.Syslog"
           menubarPath="view/logs"
           toolbarPath="logs/additions"
           tooltip="%action.tooltip.Syslog">
     </action>
     <action
           class="org.netxms.ui.eclipse.logviewer.actions.OpenSnmpTrapLog"
           definitionId="org.netxms.ui.eclipse.logviewer.commands.openSnmpTrapLog"
           icon="icons/EventLog.png"
           id="org.netxms.ui.eclipse.logviewer.actions.openSnmpTrapLog"
           label="%action.label.TrapLog"
           menubarPath="view/logs"
           toolbarPath="logs/additions"
           tooltip="%action.tooltip.TrapLog">
     </action>
		   <action id="org.netxms.ui.eclipse.logviewer.actions.openEventLog"
			   menubarPath="view/logs"
			   toolbarPath="logs/additions"
			   label="%action.label.EventLog"
			   tooltip="%action.tooltip.EventLog"
			   icon="icons/EventLog.png"
			   class="org.netxms.ui.eclipse.logviewer.actions.OpenEventLog"
			   definitionId="org.netxms.ui.eclipse.logviewer.commands.openEventLog">
		   </action>
		   <action id="org.netxms.ui.eclipse.logviewer.actions.openAuditLog"
			   menubarPath="view/logs"
			   toolbarPath="logs/additions"
			   label="%action.label.AuditLog"
			   tooltip="%action.tooltip.AuditLog"
			   icon="icons/AuditLog.png"
			   class="org.netxms.ui.eclipse.logviewer.actions.OpenAuditLog"
			   definitionId="org.netxms.ui.eclipse.logviewer.commands.openAuditLog">
		   </action>
	   </actionSet>
   </extension>

   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.netxms.ui.eclipse.logviewer.commands.openAuditLog"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="Ctrl+Alt+F11">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.logviewer.commands.openEventLog"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="Ctrl+Alt+F8">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.logviewer.commands.show_filter"
            contextId="org.netxms.ui.eclipse.logviewer.context.LogViewer"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="Ctrl+F2">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.logviewer.commands.get_more_data"
            contextId="org.netxms.ui.eclipse.logviewer.context.LogViewer"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="F9">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.logviewer.commands.execute"
            contextId="org.netxms.ui.eclipse.logviewer.context.LogViewer"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="F2">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.logviewer.commands.eventHistory"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="M3+Shift+E">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.logviewer.commands.objectSyslog"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="M3+Shift+Y">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.logviewer.commands.objectTrapLog"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="M3+Shift+T">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="org.netxms.ui.eclipse.logviewer.context.LogViewer"
            name="Log Viewer"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.netxms.ui.eclipse.logviewer.actions.ShowObjectEvents"
            commandId="org.netxms.ui.eclipse.logviewer.commands.eventHistory">
      </handler>
      <handler
            class="org.netxms.ui.eclipse.logviewer.actions.ShowObjectSyslog"
            commandId="org.netxms.ui.eclipse.logviewer.commands.objectSyslog">
      </handler>
      <handler
            class="org.netxms.ui.eclipse.logviewer.actions.ShowObjectSnmpTrapLog"
            commandId="org.netxms.ui.eclipse.logviewer.commands.objectTrapLog">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=eventsAndLogs">
         <command
               commandId="org.netxms.ui.eclipse.logviewer.commands.eventHistory"
               label="%command.name.EventLog"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <and>
                     <instanceof
                           value="org.netxms.client.objects.AbstractObject">
                     </instanceof>
                     <test
                           forcePluginActivation="true"
                           property="org.netxms.ui.eclipse.objectbrowser.isAlarmsVisible">
                     </test>
                  </and>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.netxms.ui.eclipse.logviewer.commands.objectSyslog"
               label="%command.name.Syslog"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <and>
                     <instanceof
                           value="org.netxms.client.objects.AbstractObject">
                     </instanceof>
                     <test
                           forcePluginActivation="true"
                           property="org.netxms.ui.eclipse.objectbrowser.isAlarmsVisible">
                     </test>
                  </and>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.netxms.ui.eclipse.logviewer.commands.objectTrapLog"
               label="%command.name.TrapLog"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <and>
                     <instanceof
                           value="org.netxms.client.objects.AbstractObject">
                     </instanceof>
                     <test
                           forcePluginActivation="true"
                           property="org.netxms.ui.eclipse.objectbrowser.isAlarmsVisible">
                     </test>
                  </and>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
