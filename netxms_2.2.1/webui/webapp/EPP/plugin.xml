<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="%view.name.EPP"
            icon="icons/epp.png"
            category="org.netxms.ui.eclipse.viewcategory.config"
            class="org.netxms.ui.eclipse.epp.views.EventProcessingPolicyEditor"
            id="org.netxms.ui.eclipse.epp.view.policy_editor">
      </view>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
      <command
            name="%command.name.OpenEPP"
            description="%command.description.OpenEPP"
            categoryId="org.netxms.ui.eclipse.console.category.views"
            id="org.netxms.ui.eclipse.epp.commands.open_policy_editor">
      </command>
      <command
            id="org.netxms.ui.eclipse.epp.commands.show_rule_filter"
            name="Show filter">
      </command>
   </extension>

   <extension point = "org.eclipse.ui.actionSets">
	   <actionSet id="org.netxms.ui.eclipse.action_set.event_processing_policy"
	   	   label="%actionSet.label.EPP"
		   visible="true">
		   <action id="org.netxms.ui.eclipse.epp.actions.open_policy_editor"
			   menubarPath="config/additions"
			   label="%action.label.EPP"
			   tooltip="%action.tooltip.EPP"
			   icon="icons/epp.png"
			   class="org.netxms.ui.eclipse.epp.actions.OpenPolicyEditor"
			   definitionId="org.netxms.ui.eclipse.epp.commands.open_policy_editor">
		   </action>
	   </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.netxms.ui.eclipse.epp.commands.open_policy_editor"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="F4">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.epp.commands.show_rule_filter"
            contextId="org.netxms.ui.eclipse.epp.context.PolicyEditor"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="M1+F2">
      </key>
   </extension>
